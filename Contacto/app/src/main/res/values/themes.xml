<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Contacto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fastScrollThumbDrawable">@drawable/fast_scroll_thumb</item>
    </style>

    <style name="Theme.Contacto" parent="Base.Theme.Contacto" />
    <!-- Estilo para los textos pequeños encima de los inputs -->
    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#8E8E93</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Estilo para los recuadros blancos de los inputs -->
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>
    <!-- res/values/styles.xml o themes.xml -->
    <style name="MiEstiloDeTituloToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item> <!-- Letra un poco más pequeña (el default es 20sp) -->
        <item name="android:textColor">@color/purple_500</item> <!-- Color violeta -->
    </style>

</resources>
