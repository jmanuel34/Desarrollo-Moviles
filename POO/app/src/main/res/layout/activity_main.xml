<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Enunciado en la parte superior -->
    <TextView
        android:id="@+id/enunciado_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:padding="16dp"
        android:text="IDENTIFICANDO LOS NUMEROS PARES E IMPARES"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fila 1: Botones 1, 2, 3 -->
    <Button
        android:id="@+id/boton_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#03A9F4"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/boton_4"
        app:layout_constraintEnd_toStartOf="@+id/boton_2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enunciado_textview"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/boton_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_1"
        app:layout_constraintEnd_toStartOf="@+id/boton_3"
        app:layout_constraintStart_toEndOf="@+id/boton_1"
        app:layout_constraintTop_toTopOf="@+id/boton_1" />

    <Button
        android:id="@+id/boton_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#03A9F4"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_2" />

    <!-- Fila 2: Botones 4, 5, 6 -->
    <Button
        android:id="@+id/boton_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/boton_7"
        app:layout_constraintEnd_toEndOf="@+id/boton_1"
        app:layout_constraintStart_toStartOf="@+id/boton_1"
        app:layout_constraintTop_toBottomOf="@+id/boton_1" />

    <Button
        android:id="@+id/boton_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_4"
        app:layout_constraintEnd_toEndOf="@+id/boton_2"
        app:layout_constraintStart_toStartOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_4" />

    <Button
        android:id="@+id/boton_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_5"
        app:layout_constraintEnd_toEndOf="@+id/boton_3"
        app:layout_constraintStart_toStartOf="@+id/boton_3"
        app:layout_constraintTop_toTopOf="@+id/boton_5" />

    <!-- Fila 3: Botones 7, 8, 9 -->
    <Button
        android:id="@+id/boton_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/boton_cero"
        app:layout_constraintEnd_toEndOf="@+id/boton_4"
        app:layout_constraintStart_toStartOf="@+id/boton_4"
        app:layout_constraintTop_toBottomOf="@+id/boton_4" />

    <Button
        android:id="@+id/boton_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_7"
        app:layout_constraintEnd_toEndOf="@+id/boton_5"
        app:layout_constraintStart_toStartOf="@+id/boton_5"
        app:layout_constraintTop_toTopOf="@+id/boton_7" />

    <Button
        android:id="@+id/boton_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#03A9F4"
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_8"
        app:layout_constraintEnd_toEndOf="@+id/boton_6"
        app:layout_constraintStart_toStartOf="@+id/boton_6"
        app:layout_constraintTop_toTopOf="@+id/boton_8" />

    <!-- Fila 4: BotÃ³n 0 -->
    <Button
        android:id="@+id/boton_cero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#03A9F4"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/boton_8"
        app:layout_constraintStart_toStartOf="@+id/boton_8"
        app:layout_constraintTop_toBottomOf="@+id/boton_7" />

</androidx.constraintlayout.widget.ConstraintLayout>
